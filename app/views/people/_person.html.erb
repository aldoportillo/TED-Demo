<div id="<%= dom_id person %>" class="card my-3 position-absolute top-50 start-50 translate-middle bg-gray" style="min-width: 80%; min-height: 50%">
  <div class="card-body position-absolute w-100 top-50 start-50 translate-middle">
    <h3 class="card-title d-flex justify-content-center align-items-center"><%= @person.first_name %> <%= @person.last_name %></h3>
    <p class="d-flex justify-content-center">
      <%= @person.email %>
    </p>
    <p class="d-flex justify-content-center">
      Future <%= @person.quiz_result %>
    </p>

    <p class="d-flex justify-content-center align-items-center">
      <button type="button" class="button t-orange" data-toggle="modal" data-target="#qrModal">
        QR Code
      </button>
    </p>

    <% if @person.linkedin_url?%>
      <p class="d-flex justify-content-center  align-items-center">
        <a href="<%=@person.linkedin_url%>" class="button t-orange">LinkedIn</a>
      </p>
    <% end %>

    <% if @person.github_username?%>
      <p class="d-flex justify-content-center  align-items-center">
        <a href="https://github.com/<%=@person.github_username%>" class="button t-orange">GitHub</a>
      </p>
    <% end %>
  </div>
</div>



<div class="position-absolute top-10 start-0">
  <%= render "people/qrcode_button" %>
</div>

