<div id="<%= dom_id person %>" class="card m-3 col-md-6  position-absolute top-50 start-50 translate-middle" style="background-color:#ccc">

  <h3 class="d-flex justify-content-center mt-5">Views: <%=@person.views_count%></h3>
  <% if @person.photo_url?%>
    <a href="#https://www.google.com/url?sa=i&url=https%3A%2F%2Fwww.etsy.com%2Flisting%2F1438067022%2Flink-legend-of-zelda-tears-of-the&psig=AOvVaw0VRozrZe0ILF2yh3D8ijDX&ust=1730319143443000&source=images&cd=vfe&opi=89978449&ved=0CBQQjRxqFwoTCIiS2qCztIkDFQAAAAAdAAAAABAE" class="card-img-top" alt="...">
    </a>
    <p class="d-flex justify-content-center">
      <%= @person.photo_url %>
    </p>
  <% end %>

  <div class="card-body">
    <h3 class="card-title d-flex justify-content-center"><%= @person.first_name %> <%= @person.last_name %></h3>
    <p class="d-flex justify-content-center">
      <%= @person.email %>
    </p>

    <% if @person.linkedin_url?%>
      <p class="d-flex justify-content-center">
        <strong>LinkedIn:</strong>
        <a href="<%=@person.linkedin_url%>"><%=@person.linkedin_url%></a>
      </p>
    <% end %>

    <% if @person.github_url?%>
      <p class="d-flex justify-content-center">
        <strong>GitHub:</strong>
        <a href="<%=@person.github_url%>"><%=@person.github_url%></a>
      </p>
    <% end %>

    <% if @person.devto_url?%>
      <p class="d-flex justify-content-center">
        <strong>Dev.to:</strong>
        <a href="<%=@person.devto_url%>"><%=@person.devto_url%></a>
      </p>
    <% end %>
  </div>
</div>

